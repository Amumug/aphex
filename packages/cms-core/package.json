{
  "name": "@aphex/cms-core",
  "version": "0.1.0",
  "description": "Aphex CMS Core - A Sanity-style CMS with ports and adapters architecture",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./server": {
      "types": "./src/server/index.ts",
      "import": "./src/server/index.ts"
    },
    "./client": {
      "types": "./src/client/index.ts",
      "import": "./src/client/index.ts"
    },
    "./routes/*": {
      "types": "./src/routes/*.ts",
      "import": "./src/routes/*.ts"
    }
  },
  "files": [
    "dist/**/*",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "package": "npm run build && npm pack"
  },
  "keywords": [
    "cms",
    "svelte",
    "sveltekit", 
    "content-management",
    "sanity-style",
    "typescript",
    "aphex"
  ],
  "author": "Your Name",
  "license": "MIT",
  "peerDependencies": {
    "@sveltejs/kit": "^2.22.0",
    "svelte": "^5.0.0",
    "drizzle-orm": "^0.40.0",
    "postgres": "^3.4.5"
  },
  "dependencies": {
    "@lucide/svelte": "^0.544.0",
    "bits-ui": "^2.11.1",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.544.0",
    "mode-watcher": "^1.1.0",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.22.0",
    "@internationalized/date": "^3.9.0",
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.40.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^7.0.4"
  }
}