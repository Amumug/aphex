{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		// "allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"$lib/*": ["../../src/lib/*"],
			"$app/*": ["../../src/app/*"],
			"$env/*": ["../../src/env/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"],
	"exclude": ["node_modules", "dist"]
}
